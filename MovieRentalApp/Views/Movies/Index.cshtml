@model IEnumerable<MovieRentalApp.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@Html.ActionLink("NEW MOVIE", "New", "", new {@class="btn btn-primary" })
<p></p>
@if (!Model.Any())
{
    <text> No Movie Available. </text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>             
                <th>Title</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
            <tr>
                <td>@Html.ActionLink(@movie.Name, "Details", "Movies", new { id = movie.Id }, null)</td>
                <td>@movie.Genre.Name</td>
            </tr>
            }
        </tbody>
    </table>
}

