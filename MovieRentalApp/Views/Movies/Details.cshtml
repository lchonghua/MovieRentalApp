@model MovieRentalApp.Models.Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<hr />
<ul>
    <li>@Html.LabelFor(m => m.Genre):&nbsp&nbsp&nbsp @Model.Genre.Name</li>
    <li>@Html.LabelFor(m => m.ReleaseDate):&nbsp&nbsp&nbsp @Model.ReleaseDate.ToShortDateString()</li>
    <li>@Html.LabelFor(m => m.DateAdded):&nbsp&nbsp&nbsp @Model.DateAdded.ToShortDateString()</li>
    <li>@Html.LabelFor(m => m.NumberInStock):&nbsp&nbsp&nbsp @Model.NumberInStock</li>
</ul>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
